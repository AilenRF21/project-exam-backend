generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id        Int      @id @default(autoincrement())
  name      String
  debut     DateTime?       
  createdAt DateTime @default(now())  
  product   Product[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}


model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  stock       Int?
  description String?
  imageUrl    String?
  artistId    Int
  artist      Artist   @relation(fields: [artistId], references: [id])
  
  categoryId  Int     
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
